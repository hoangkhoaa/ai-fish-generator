# Fish Generator Configuration

# API Keys (replace with your actual keys)
GEMINI_API_KEY=your_gemini_api_key
OPENWEATHER_API_KEY=your_openweather_api_key
NEWSAPI_KEY=your_newsapi_key
METALPRICE_API_KEY=your_metalprice_api_key
EIA_API_KEY=your_eia_api_key

# Feature Toggles
USE_AI=true
TEST_MODE=false

# Translation Settings
ENABLE_TRANSLATION=0
TRANSLATION_INTERVAL=2

# MongoDB Configuration
# Inside Docker: Use "mongodb" as hostname
MONGO_URI=mongodb://fishuser:yourpassword@mongodb:27017/fish_generator?authSource=admin

# For external connections (from host machine): Use port 27018
# MONGO_URI_EXTERNAL=mongodb://fishuser:yourpassword@localhost:27018/fish_generator?authSource=admin

MONGO_DB=fish_generator

# Collection Intervals (in hours)
WEATHER_INTERVAL=3
PRICE_INTERVAL=12
NEWS_INTERVAL=0.05

# Fish Generation Settings
GENERATION_COOLDOWN=30  # Minutes between fish generations

# Mode Settings
# TEST_MODE=true generates fish every 5 seconds and collects data every 5 seconds
# TEST_MODE=false generates fish every 30 minutes and collects data at intervals defined above

# MongoDB Credentials (optional, uncomment if needed)
# MONGO_USERNAME=admin
# MONGO_PASSWORD=secure_password

