# API Keys (replace with your actual keys)
WEATHER_API_KEY=your_weather_api_key
NEWS_API_KEY=your_news_api_key
METAL_PRICE_API_KEY=your_metal_price_api_key
GEMINI_API_KEY=your_gemini_api_key

# Feature Toggles
USE_AI=true
TEST_MODE=false

# MongoDB Configuration
MONGO_USERNAME=fishuser
MONGO_PASSWORD=yourpassword
MONGO_DATABASE=fish_generator

# Collection Intervals
COLLECTION_INTERVAL_WEATHER=3600s  # 1 hour
COLLECTION_INTERVAL_PRICE=21600s   # 6 hours
COLLECTION_INTERVAL_NEWS=43200s    # 12 hours
GENERATION_COOLDOWN=900s           # 15 minutes

# Mode Settings
# TEST_MODE=true generates fish every 5 seconds and collects data every 5 seconds
# TEST_MODE=false generates fish every 30 minutes and collects data at intervals defined above

# MongoDB Credentials (optional, uncomment if needed)
# MONGO_USERNAME=admin
# MONGO_PASSWORD=secure_password

